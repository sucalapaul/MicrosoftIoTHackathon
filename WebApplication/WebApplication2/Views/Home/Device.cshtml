
@{
    ViewBag.Title = "Devices";
}

<h2>Devices</h2>

@{ var min = 0; }

<div class="row">

    @for (var i = 1; i < 5; i++)
    {
        
        if (@ViewBag.direction[i] > 0)
        {
            <div class="col-sm-3" style="background-color:#00aba9;height:18em;margin:1em">
                <h2 style="color:white">ESP8266: @i</h2>
            </div>
        }
        else
        {
            min = i;
        }
    }

    @if (min > 0)
    {
        <a href="/Home/DeviceAdd/@min"><div class="col-sm-3" style="background-color:#ffc40d;height:18em;margin:1em">
            <h2 style="color:white">Add device  +</h2>
        </div></a>
    }

</div>